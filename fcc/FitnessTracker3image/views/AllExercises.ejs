<!DOCTYPE html>
<html>
<head>
<title>All exercises</title>
<style>

html, body {
  margin:0;
  padding:0;
}
h1 {
  color:green;
}

div {
    width:800px;
    margin: auto;
}

td {
  padding: .5em 1.5em;
}

#userBar {
  display: inline-block;

}

#userEmail {
  font-weight:700;
  color: #000080;
}

.avatar {
    margin-left: 1em;
    vertical-align: middle;
    width: 50px;
    height: 50px;
    border-radius: 50%;
}
</style>

</head>
<body>

<div>

  <a href="/records/postUserExercise">Post a new exerise</a>
  <a href=<%= "/records/loggedInUser/" +id.toString()%>>All Users exercises</a>
  <a href="/records/loggedinUserSearchbyDateForm2">Search By Date</a>
  <a href="/user/help">Help</a>
  <a href="/uploadSmallImage">
    <img class="avatar" src="data:image/png;base64,<%- Image %>" />
  </a>
  <p id="userBar"><span id="userEmail"><%= email %></span></p>
  <a href="/log/logout">Logout</a>


<h1>All exercise entries </h1>



<table>
  <tr>
    <th>Description</th>
    <th>Duration(minutes)</th>
    <th>Date</th>
  </tr>
<% for(var i=0; i < entirety.length; i++) { %>
   <tr>
     <td><%= entirety[i].description %></td>
     <td><%= entirety[i].duration %></td>
     <td><%= entirety[i].date %></td>
   </tr>
<% } %>
</table>




</div>







</body>
</html>
